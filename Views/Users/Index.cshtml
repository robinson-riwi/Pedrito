@model IEnumerable<Pedrito.Models.User>
<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="mt-4">
                        <label for="">Nombres</label>
                        <input type="text" name="Names" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label for="">Apellidos</label>
                        <input type="text" name="LastNames" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label for="">Correo</label>
                        <input type="text" name="Email" class="form-control">
                    </div>
                    <hr>
                    <button class="btn btn-primary w-100">Guardar Info</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["message"]
                    </div>
                }

                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>NAMES</th>
                        <th>LASTNAMES</th>
                        <th>EMAIL</th>
                        <th>ACCIONES</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th>@user.Id</th>
                            <th>@user.Names</th>
                            <th>@user.LastNames</th>
                            <th>@user.Email</th>
                            <th>
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"
                                   class="btn btn-info">Detalles</a>
                                <a href="" class="btn btn-warning">Editar</a>
                                <a  asp-action="Destroy" asp-route-id="@user.Id" asp-controller="Users" class="btn btn-danger">Delete</a>
                            </th>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
