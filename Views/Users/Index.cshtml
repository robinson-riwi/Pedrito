@model IEnumerable<Pedrito.Models.User>
<div class="card">
    <div class="card-body">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>NAMES</th>
                <th>LASTNAMES</th>
                <th>EMAIL</th>
                <th>ACCIONES</th>
            </tr>
            </thead>
            <tbody>
               @foreach (var user in Model)
               {
                   <tr>
                       <th>@user.Id</th>
                       <th>@user.Names</th>
                       <th>@user.LastNames</th>
                       <th>@user.Email</th>
                       <th>
                           <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Detalles</a>
                           <a href="" class="btn btn-warning">Editar</a>
                           <a href=""class="btn btn-danger" >Delete</a>
                       </th>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>